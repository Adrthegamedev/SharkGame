{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "prettier", "prettier/standard"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "globals": {
    "_": "readonly",
    "$": "readonly",
    "ascii85": "readonly",
    "pako": "readonly",
    "SharkGame": "readonly"
  },
  "ignorePatterns": ["js/lib/**", "js/fallback/**", "js/reference/**", "js/menu/**"],
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "(?:^__)|(?:^.$)",
        "argsIgnorePattern": "(?:^_)|(?:^.$)"
      }
    ],
    "func-names": ["error", "always"],
    "no-inner-declarations": "off"
  }
}

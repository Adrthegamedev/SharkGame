{
    "env": {
        "browser": true,
        "commonjs": true,
        "worker": true,
        "jquery": true,
        "es2021": true
    },
    "extends": ["eslint:recommended", "prettier", "prettier/standard"],
    "globals": {
        "_": "readonly",
        "ascii85": "readonly",
        "pako": "readonly",
        "SharkGame": "readonly",

        "res": "readonly",
        "main": "readonly",
        "rec": "readonly",
        "gateway": "readonly",
        "stats": "readonly",
        "world": "readonly",
        "home": "readonly",
        "cad": "readonly"
    },
    "ignorePatterns": ["js/lib/**"],
    "rules": {
        "no-unused-vars": [
            "error",
            {
                "varsIgnorePattern": "^__.+$",
                "argsIgnorePattern": "^_.+$",
                "args": "all"
            }
        ],
        "func-names": ["error", "always"],
        "func-style": ["error", "declaration"],
        "no-inner-declarations": "off",
        "prefer-const": "error",
        "no-var": "error",
        "no-shadow": ["error", { "builtinGlobals": true, "hoist": "all", "allow": ["name", "event"] }],
        "eqeqeq": ["error", "smart"]
    }
}
